# NAVIGATION ALIASES
# ==================

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias ~='cd ~'
alias home='cd ~'
alias -='cd -'
alias back='cd -'
alias cc='clear'

take () {
    if [[ -n $1]]; then
        if [ ! -d $1 ]; then
            mkdir $1
        fi
        cd $1
    else
        echo -n 'You must provide a name for the new directory'
    fi
}
